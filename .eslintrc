{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "__DEVELOPMENT__": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "space-before-function-paren": [ 2, "never" ],
    "semi": [2, "never"]
  }
}
